{
    "$schema": "https://opencode.ai/config.json",
    "provider": {
      "litellm-proxy": {
        "npm": "@ai-sdk/openai-compatible",
        "name": "LiteLLM Router (Gemini/Grok/ZAI)",
        "options": {
          "baseURL": "http://localhost:4000/v1",
          "apiKey": "{env:LITELLM_MASTER_KEY}",
          "headers": {
            "Authorization": "Bearer {env:LITELLM_MASTER_KEY}"
          }
        },
        "models": {
          "gemini-3-pro": {
            "name": "Gemini 3 Pro (Reasoning)",
            "limit": {
              "context": 1048576,
              "output": 65536
            }
          },
          "gemini-3-flash": {
            "name": "Gemini 3 Flash (Fast)",
            "limit": {
              "context": 1048576,
              "output": 65536
            }
          },
          "grok-4.1-reasoning": {
            "name": "Grok 4.1 Reasoning",
            "limit": {
              "context": 256000,
              "output": 32768
            }
          },
          "grok-code": {
            "name": "Grok Code Fast",
            "limit": {
              "context": 128000,
              "output": 16384
            }
          },
          "z-ai-coding": {
            "name": "GLM 4.7 Coding",
            "limit": {
              "context": 200000,
              "output": 8192
            }
          }
        }
      }
    }
  }